设置表记录可以写中文
		]# LANG="zh_CN.UTF-8"
mysql> create table db1.学生表(
   姓名 char(10), 
   家庭地址 char(20) 
   ) DEFAULT CHARSET=utf8;

mysql> insert into db1.学生表 values("张三丰","武当山");
mysql> insert into db1.学生表 values("张四丰","武台山");
mysql> select  * from  db1.学生表;
	

  
